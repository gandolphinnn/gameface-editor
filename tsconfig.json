{
	"compilerOptions": {
		"target": "es2018",
		"module": "esnext",
		"moduleResolution": "node",
		"strict": false,
		"noImplicitAny": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"baseUrl": ".",
		"allowJs": true,
		"paths": {
			"*": [
				"node_modules/*",
				"src/types/*"
			]
		},
		"typeRoots": [
			"./node_modules/@types",
			"./src/types"
		]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules"
	]
}